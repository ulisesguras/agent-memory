{
  "$schema": "https://agentprotocol.ai/schemas/agent-manifest/v1",
  "schema_version": "1.0",

  "identity": {
    "id": "agent-memory",
    "name": "Agent Memory",
    "version": "3.0.0",
    "description": "Autonomous cognitive memory layer for AI agents. Five memory types (sensory, short-term, long-term, episodic, semantic), importance-based retention, strategic forgetting, and cross-session persistence.",
    "homepage": "https://your-domain.com",
    "documentation": "https://your-domain.com/docs",
    "license": "MIT"
  },

  "capabilities": [
    {
      "id": "memory.store",
      "description": "Store a memory in a specific cognitive layer with auto-classified importance",
      "input": ["agent_id", "content", "memory_type?", "importance?"],
      "output": ["memory_id", "type", "importance_assigned"]
    },
    {
      "id": "memory.retrieve",
      "description": "Retrieve relevant memories from one or all layers",
      "input": ["agent_id", "query?", "memory_type?", "limit?"],
      "output": ["memories[]", "count"]
    },
    {
      "id": "memory.context",
      "description": "Get a formatted memory context snapshot ready for LLM prompt injection",
      "input": ["agent_id", "limit_per_layer?"],
      "output": ["context_text", "layers{}"]
    },
    {
      "id": "memory.interact",
      "description": "Full ReAct loop: observe, load memory, generate response, score importance, store. Returns response + thought trace.",
      "input": ["agent_id", "session_id", "user_input", "agent_type?"],
      "output": ["response", "thought", "memory_stats"]
    },
    {
      "id": "memory.consolidate",
      "description": "Run episodic → semantic consolidation (dream-like processing). Extracts learned concepts from repeated experiences.",
      "input": ["agent_id"],
      "output": ["consolidated_count", "new_semantic_ids[]"]
    },
    {
      "id": "memory.remember",
      "description": "Explicitly store a fact with CRITICAL importance — never forgotten unless user deletes",
      "input": ["agent_id", "fact", "memory_type?"],
      "output": ["memory_id"]
    },
    {
      "id": "memory.stats",
      "description": "Memory statistics: total count, pressure, distribution by type and importance",
      "input": ["agent_id"],
      "output": ["total_memories", "memory_pressure", "by_type{}", "by_importance{}"]
    },
    {
      "id": "memory.search",
      "description": "Search across all memory layers for relevant content",
      "input": ["agent_id", "query", "top_k?"],
      "output": ["memories[]", "count"]
    }
  ],

  "endpoints": {
    "base_url": "https://your-domain.com",
    "health":    "GET  /health",
    "manifest":  "GET  /.well-known/agent.json",
    "metrics":   "GET  /metrics",
    "interact":  "POST /interact",
    "store":     "POST /memory/remember",
    "retrieve":  "POST /memory/query",
    "context":   "GET  /memory/context/{agent_id}",
    "stats":     "GET  /memory/stats/{agent_id}",
    "consolidate":"POST /memory/consolidate",
    "agents":    "GET  /agents"
  },

  "performance": {
    "latency_p50_ms": 45,
    "latency_p99_ms": 200,
    "uptime_30d_pct": 99.5,
    "storage_efficiency_vs_flat_log": "70%",
    "context_size_reduction": "94%"
  },

  "reliability": {
    "liveness_endpoint": "/health",
    "liveness_check_interval_sec": 30,
    "proven_reliability": true,
    "confidence_score": 0.95,
    "failure_mode": "graceful_degradation",
    "data_persistence": "cross_session"
  },

  "pricing": {
    "model": "free_open_source",
    "tiers": [
      {
        "name": "self_hosted",
        "cost": 0,
        "description": "Run locally or on your own infra. Zero cost. Full control.",
        "limits": "none"
      },
      {
        "name": "managed_api",
        "cost_per_1k_interactions": 0.01,
        "cost_per_agent_per_month": 0.50,
        "description": "Hosted version with SLA. Pay per use.",
        "limits": {
          "memories_per_agent": 2000,
          "agents_per_account": "unlimited"
        }
      }
    ],
    "currency": "USD",
    "billing_endpoint": "https://your-domain.com/billing"
  },

  "integration": {
    "protocols": ["REST", "MCP"],
    "mcp_server": "https://your-domain.com/mcp",
    "auth": {
      "type": "api_key",
      "header": "X-Agent-Memory-Key",
      "signup": "https://your-domain.com/api-keys"
    },
    "sdks": {
      "python": "pip install agent-memory",
      "npm": "npm install @agent-memory/client"
    }
  },

  "agent_compatibility": {
    "frameworks": [
      "pydantic-ai",
      "langchain",
      "langgraph",
      "autogen",
      "crewai",
      "custom_react"
    ],
    "llm_backends": [
      "anthropic",
      "openai",
      "vertex-ai",
      "ollama",
      "any"
    ],
    "mcp_compatible": true,
    "openai_plugin_compatible": false
  },

  "data": {
    "storage_backends": ["local_json", "firestore", "redis", "sqlite"],
    "default_backend": "local_json",
    "data_ownership": "user",
    "portability": "full_json_export",
    "retention_policy": "user_controlled",
    "gdpr_compliant": true
  },

  "discovery": {
    "tags": [
      "memory", "agent-memory", "cognitive", "persistent-context",
      "episodic", "semantic", "short-term", "long-term",
      "agent-infrastructure", "context-management"
    ],
    "use_cases": [
      "persistent_agent_memory",
      "cross_session_context",
      "multi_agent_shared_memory",
      "user_preference_learning",
      "knowledge_consolidation"
    ],
    "registries": [
      "https://mcp.so",
      "https://smithery.ai",
      "https://glama.ai/mcp/servers"
    ]
  },

  "meta": {
    "last_updated": "2026-02-18",
    "contact": "your@email.com",
    "repository": "https://github.com/your-org/agent-memory",
    "changelog": "https://your-domain.com/changelog"
  }
}
